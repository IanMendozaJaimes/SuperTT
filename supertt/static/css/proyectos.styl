proyect_width = 230px
proyect_height = 280px
proyect_padding = 20px

.Proyects
	margin-top 120px
	make_flex()
	
	&_c 
		max-width 1000px
		flex-basis 80%
	
	&_options
		display flex 
		justify-content flex-end
		margin-bottom 1em
		
		&_btn
			margin-right 1.5em
	
	&_container
		make_flex()
		flex-wrap wrap
		
		&_proyect
			padding proyect_padding
			background-color fill_color_dark
			width proyect_width
			min-height proyect_height
			color font_color
			make_flex()
			flex-wrap wrap
			align-content flex-start
			margin 1.5em
			
			&:hover
				cursor pointer
				box-shadow 0 0 5px gray
			
			&_name
				flex-basis 100%
				font-size 1em

			&_date
				font-size 0.8em
				flex-basis 100%
				margin-top 0.4em
				
			&_image
				background-image get_link_image('imagenProyecto.jpg')
				background-size cover
				background-position center
				width proyect_width
				height proyect_width
				margin-top 20px


.Translations
	margin-top 100px
	make_flex()
	
	&_container
		max-width 1000px
		flex-basis 80%
		

	&_proyect
		make_flex()
		justify-content space-around
		margin-bottom 3em
		
		&_description
			flex-basis 70%
			
			&_name
				font-size 1.3em
				margin-bottom 0.5em
		
		&_download
			flex-basis 30%
			make_flex()
			justify-content flex-end
			align-items flex-start
		
		&_container
			make_flex()
			align-items center
			margin 1em 0
			padding 15px 25px
			height 100px
			background-color fill_color_dark
			
			&:hover
				cursor pointer
				box-shadow 0 0 5px gray
				
			&:last-child
				margin-bottom 3em
			
			&_translation
				flex-basis 20%
			
			&_image
				width 100px
				height 100px
				background-image get_link_image('imagenProyecto.jpg')
				background-size cover
				background-position center
				
			&_info
				flex-basis 25%
			
			&_example
				flex-basis 25%
				max-height 100px
				overflow none
				
			&_copy
				flex-basis 30%
				make_flex()
				justify-content flex-end
				
			&_btn
				flex-basis 70%;





















